<h1 class="text-center">Domains</h1>

<div class="container">
  <div class="table-responsive panel">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>FQDN</th>
          <th>Is certificate expiring</th>
          <th>Certificate issued at</th>
          <th>Certificate expiring at</th>
          <th>Certificate issuer</th>
        </tr>
      </thead>

      <tbody>
        <% unless @domains.blank? %>
          <% @domains.each do |domain| %>
            <tr>
              <td><%= domain.id %></td>
              <td><%= domain.fqdn %></td>
              <td><%= domain.certificate_expiring %></td>
              <td><%= domain.certificate_expiring_not_before %></td>
              <td><%= domain.certificate_expiring_not_after %></td>
              <td><%= domain.cert_issuer_to_s %></td>
            </tr>
          <% end %>
        <% else %>
        You don't have any entries in the database
        <% end %>
      </tbody>
    </table>
  </div>
</div>
